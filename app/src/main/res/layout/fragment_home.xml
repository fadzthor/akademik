<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEFEF"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    // Header
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@drawable/background_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-110dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/background_white">
    <ImageView
        android:src="@drawable/ic_uap"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:cropToPadding="true"
        android:adjustViewBounds="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvNamamhs"
                android:text="Aplkasi Akademik"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvProdi"
                android:textSize="16dp"
                android:text="FTI"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvSemester"
                android:textSize="16dp"
                android:text="Universitas Aisyah Pringsewu"/>
        </LinearLayout>

    </LinearLayout>

    // Menu Bar 1
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        // Menu A
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="1"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@drawable/background_menu_pb1"
               android:padding="10dp"
               android:gravity="center"
               android:foreground="?android:selectableItemBackground">
               <ImageView
                   android:src="@drawable/ic_user"
                   android:id="@+id/imageViewProfile"
                   android:layout_width="50dp"
                   android:layout_height="50dp"/>
           </LinearLayout>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Profil"
               android:textSize="16dp"
               android:textStyle="bold"
               android:textAlignment="center"/>
       </LinearLayout>
        // Menu B
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_menu_pb4"
                android:padding="10dp"
                android:gravity="center"
                android:foreground="?android:selectableItemBackground">
                <ImageView
                    android:src="@drawable/ic_planning"
                    android:id="@+id/imageViewJadwal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jadwal"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textAlignment="center"/>
        </LinearLayout>
        // Menu C
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_menu_pb3"
                android:padding="10dp"
                android:gravity="center"
                android:foreground="?android:selectableItemBackground">
                <ImageView
                    android:src="@drawable/ic_book_stack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textAlignment="center"/>
        </LinearLayout>


    </LinearLayout>

    // Menu Bar 2
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        // Menu D
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_menu_pp4"
                android:padding="10dp"
                android:gravity="center"
                android:foreground="?android:selectableItemBackground">
                <ImageView
                    android:src="@drawable/ic_profits"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textAlignment="center"/>
        </LinearLayout>
        // Menu E
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_menu_pb3"
                android:padding="10dp"
                android:gravity="center"
                android:foreground="?android:selectableItemBackground">
                <ImageView
                    android:src="@drawable/ic_warning"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textAlignment="center"/>
        </LinearLayout>
        // Menu E
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_menu_pb2"
                android:padding="10dp"
                android:gravity="center"
                android:foreground="?android:selectableItemBackground">
                <ImageView
                    android:src="@drawable/ic_like"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="F"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textAlignment="center"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>